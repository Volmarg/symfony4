{% extends 'base.html.twig' %}

{% block title %}Hello UserProfileSettingsController!{% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/forms.css') }}">
        <link rel="stylesheet" href="{{ asset('css/avatar.css') }}">
    {% endblock %}
{% block body %}
    {{ parent() }}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    {% include 'components/avatar/avatar.html.twig' %}

    <div class="configs-wrapper container">
        {{ form(login_data_form,{'attr':{'class':'form-signin form-credentials-change'}}) }}
        {{ form(avatar_form,{'attr':{'class':'form-signin form-avatar-change'}}) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/avatar.js') }}"></script>
{% endblock %}
